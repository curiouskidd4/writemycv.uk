    <title>{{ name }}'s Resume</title>
    <script>
      // Order sections based on the order in the array
      const sectionOrder = '{{ sectionOrder | safe }}';
      let sectionOrderList = sectionOrder.split(",")
      function reorder(){
          const sections = document.querySelectorAll(".section");
                const sectionContainer = document.querySelector(".resume-container");

                sectionOrderList.forEach(function (section)  {
                  const sectionElement = document.querySelector(`.section.${section}`);
                  sectionContainer.appendChild(sectionElement);
                });
      }
     

        // Run reorder function after the page is loaded
        window.addEventListener("load", function () {
          reorder();
        });




    </script>
<style>
     html {
        height: 100%;
     }
     ul {
          padding-inline-start: 24px;
     }
      .material-symbols-outlined {
        font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 16;
        font-size: 11px;
      }
      /* Add your custom styles here */
      * {
        margin: 0px;
      }

      strong { 
        font-weight: 600;
      }

      h1 {
                font-weight: 600;

      }

      body {
        width: 21cm;
        min-height: 29.7cm;
        font-family: Arial, sans-serif;
        /* margin: 20px; */
        line-height: 1.4;
        background-color: grey;
        font-family: Poppins, sans-serif;
        font-size: 11px;
        font-weight: 300;
        background-color: white;

      }
      .resume-container {
        /* width: 21cm; */
        size: 7in 9.25in;
    /* margin: 27mm 16mm 27mm 16mm; */
        margin: auto;
        padding: 2rem 3rem;
      }
      .header {
        /* background-color: #f4f4f4; */
        /* padding: 10px; */
        /* text-align: center; */
        margin-bottom: 1rem;
      }
      .section {
        margin-bottom: 12px;
      }

      .section-title {
        border-bottom: 1px solid #ccc;
        margin-bottom: 0.5rem;
      }

      .header-title {
        font-size: 2rem;
        margin: 0.125rem 0;
      }

      .header-subtitle {
        font-size: 14px;
        font-weight: 300;
        margin-bottom: 0.5rem;
        margin: 0.125rem 0;
        margin-top: -4px;
      }

      .profile-details {
        display: flex;
        /* justify-content: space-between; */
        font-size: 12px;
        font-weight: 300;
        gap: 1rem;
      }

      .profile-details .item {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        {# display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 4px;
        align-items: center; #}

      }

      .section h2 {
        font-weight: 600;
      }

      .section h3 {
        font-weight: 400;
      }

      .section-item {
        margin-bottom: 0.5rem;
      }

      .education-date{
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 11px;
      }

      .experience-date{
        display: flex;
        align-items: flex-start;
        gap: 4px;
        font-size: 11px;
      }

      .subdetails{
        color: gray;
        flex-wrap: wrap;
      }

      .description {
        margin-top: 4px;
      }
    </style>
</head>
<body>
        <div class="resume-container">

    <header class="header">
        <h1 class="header-title">{{ personalInfo.firstName }} {{ personalInfo.lastName }}</h1>

       


        <div class="profile-details subdetails">
          
          {% if personalInfo.location %}
          <span class="item"
            ><i class="fa-solid fa-house"></i>{{ personalInfo.location }}</span
          >
          {% endif %}
          <span class="item"
            ><i class="fa-solid fa-phone"></i>{{ personalInfo.phoneString }}</span
          >
          <span class="item"
            ><i class="fa-solid fa-envelope"></i>{{ personalInfo.email }}</span
          >
          
        </div>
          <div class="profile-details subdetails">
                  {% if personalInfo.linkedin %}
          <span class="item"
            ><i class="fab fa-linkedin-in"></i>
            {{ personalInfo.linkedin }}</span
          >
          {% endif %}
          </div>



    </header>

    <section class="section professionalSummary">
        <h2 class="section-title">Summary</h2>
        <p class="section-content">{{ professionalSummary  | safe }}</p>
    </section>

    <section class="section education">
        <h2 class="section-title">Education</h2>
        {% for school in educationList %}
            <div class="section-item">
                <h3 class="education-name">{{ school.school }}</h3>
                <p class="education-degree subdetails">{{ school.degree }} </p>
                 <div class="education-date subdetails">
                  <div>
                    <i class="fa-solid fa-calendar"></i>
                    <span>{{ school.startDate }} - {{ school.endDate }}</span>
                    </div>
                    <div>
                    {% if school.grade %}
                    <i class="fa-solid fa-star"></i><span>{{ school.grade }}</span>
                    {% endif %}
                    </div>

                </div>
                
                <p class="education-description">{{ school.description | safe  }}</p>
            </div>
        {% endfor %}
    </section>

    <section class="section experience">
        <h2 class="section-title">Experience</h2>
        {% for job in experienceList %}
            <div class="section-item">
                <h3 class="experience-position">
                  {% if job.position %}
                    {{ job.position }} at
                  {% endif %}
                  
                 {{ job.employerName }}</h3>

                 {% if job.isSubDetailAvailable %}
                <p class="experience-date subdetails">
                  {% if job.startDate or job.endDate %}
                    <i class="fa-solid fa-calendar"></i>
                    {% endif %}
                    {% if job.startDate and job.endDate %}
                    {{ job.startDate }} to {{ job.endDate }}
                    {% elif job.startDate or job.endDate %}
                    {{ job.startDate }}{{ job.endDate  }}
                    {% endif %}
                </p>
                {% endif %}
                <p class="experience-description">{{ job.description | safe  }}</p>
                <div>
                  
                   
                  {% if job.achievements and job.achievements|length > 0 %}
                    <h4 class="experience-achievements">Achievements</h4>
                  {% endif %}
                  <ul>
                    {% for achievement in job.achievements %}
                      <li>{{ achievement.description }}</li>
                    {% endfor %}
                  </ul>
                </div>

            </div>
        {% endfor %}
    </section>

    {# <section class="section courses">
        <h2 class="section-title">Courses & Certifications</h2>
        {% for course in courses %}
            <div class="section-item">
                <h3 class="course-title">{{ course.title }}, {{ course.institution }}</h3>
                <p class="experience-date subdetails">
                    <span class="material-symbols-outlined"> calendar_month</span>Mar
                    {{ course.date }}
                </p>
                <p class="course-description">{{ course.description }}</p>
            </div>
        {% endfor %}
    </section> #}

    <section class="section skills">
        <h2 class="section-title">Skills</h2>
        <ul class="skills-list">
        {% for skill in skillList %}
            <li class="skill-item">{{ skill.name }} ( {{ skill.level }} )</li>
        {% endfor %}
        </ul>
    </section>

    {# <section class="section hobbies">
        <h2 class="section-title">Hobbies</h2>
        <ul class="hobbies-list">
        {% for hobby in hobbies %}
            <li class="hobby-item">{{ hobby }}</li>
        {% endfor %}
