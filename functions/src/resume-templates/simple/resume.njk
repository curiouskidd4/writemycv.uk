      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ name }}'s Resume</title>
<style>
     html {
        height: 100%;
     }
      .material-symbols-outlined {
        font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 16;
        font-size: 11px;
      }
      /* Add your custom styles here */
      * {
        margin: 0px;
      }
      body {
        width: 21cm;
        min-height: 29.7cm;
        font-family: Arial, sans-serif;
        /* margin: 20px; */
        line-height: 1.4;
        background-color: grey;
        font-family: Poppins, sans-serif;
        font-size: 11px;
        font-weight: 300;
        background-color: white;

      }
      .resume-container {
        /* width: 21cm; */
        size: 7in 9.25in;
    /* margin: 27mm 16mm 27mm 16mm; */
        margin: auto;
        padding: 2rem 3rem;
      }
      .header {
        /* background-color: #f4f4f4; */
        /* padding: 10px; */
        /* text-align: center; */
        margin-bottom: 1rem;
      }
      .section {
        margin-bottom: 12px;
      }

      .section-title {
        border-bottom: 1px solid #ccc;
        margin-bottom: 0.5rem;
      }

      .header-title {
        font-size: 2rem;
        margin: 0.125rem 0;
      }

      .header-subtitle {
        font-size: 14px;
        font-weight: 300;
        margin-bottom: 0.5rem;
        margin: 0.125rem 0;
        margin-top: -4px;
      }

      .profile-details {
        display: flex;
        /* justify-content: space-between; */
        font-size: 12px;
        font-weight: 300;
        gap: 1rem;
      }

      .profile-details .item {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
      }

      .section h2 {
        font-weight: 600;
      }

      .section h3 {
        font-weight: 400;
      }

      .section-item {
        margin-bottom: 0.5rem;
      }

      .education-date{
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 11px;
      }

      .experience-date{
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 11px;
      }

      .subdetails{
        color: gray;
      }

      .description {
        margin-top: 4px;
      }
    </style>
</head>
<body>
        <div class="resume-container">

    <header class="header">
        <h1 class="header-title">{{ personalInfo.firstName }} {{ personalInfo.lastName }}</h1>

        <div class="profile-details subdetails">
          <span class="item"
            ><span class="material-symbols-outlined"> mail </span
            >{{ personalInfo.email }}</span
          >
          <span class="item"
            ><span class="material-symbols-outlined"> call </span
            >{{ personalInfo.phone }}</span
          >

          {# <span class="item"
            ><span class="material-symbols-outlined"> call </span
            >8750888183</span
          > #}
        </div>
    </header>

    <section class="section objective">
        <h2 class="section-title">Objective</h2>
        <p class="section-content">{{ summary }}</p>
    </section>

    <section class="section education">
        <h2 class="section-title">Education</h2>
        {% for school in educationList %}
            <div class="section-item">
                <h3 class="education-name">{{ school.school }}</h3>
                <p class="education-degree subdetails">{{ school.degree }} </p>
                 <p class="education-date subdetails">
                    <span class="material-symbols-outlined"> calendar_month</span>Sep
                    {{ school.startDate }} - {{ school.endDate }}
                </p>
                <p class="education-description">{{ school.description }}</p>
            </div>
        {% endfor %}
    </section>

    <section class="section experience">
        <h2 class="section-title">Experience</h2>
        {% for job in experienceList %}
            <div class="section-item">
                <h3 class="experience-position">{{ job.position }} at {{ job.employerName }}</h3>
                <p class="experience-date subdetails">
                    <span class="material-symbols-outlined"> calendar_month</span>Mar
                    {{ job.startDate }} to {{ job.endDate }}
                </p>
                <p class="experience-description">{{ job.description }}</p>
            </div>
        {% endfor %}
    </section>

    <section class="section courses">
        <h2 class="section-title">Courses & Certifications</h2>
        {% for course in courses %}
            <div class="section-item">
                <h3 class="course-title">{{ course.title }}, {{ course.institution }}</h3>
                <p class="experience-date subdetails">
                    <span class="material-symbols-outlined"> calendar_month</span>Mar
                    {{ course.date }}
                </p>
                <p class="course-description">{{ course.description }}</p>
            </div>
        {% endfor %}
    </section>

    <section class="section skills">
        <h2 class="section-title">Skills</h2>
        <ul class="skills-list">
        {% for skill in skillList %}
            <li class="skill-item">{{ skill.name }} ( {{ skill.level }} )</li>
        {% endfor %}
        </ul>
    </section>

    <section class="section hobbies">
        <h2 class="section-title">Hobbies</h2>
        <ul class="hobbies-list">
        {% for hobby in hobbies %}
            <li class="hobby-item">{{ hobby }}</li>
        {% endfor %}
        </ul>
    </section>

    <section class="section references">
        <h2 class="section-title">References</h2>
        {% for reference in references %}
            <div class="section-item">
                <p class="reference-name">{{ reference.name }} - {{ reference.relationship }}</p>
                <p class="reference-contact">{{ reference.email }} | {{ reference.phone }}</p>
            </div>
        {% endfor %}
    </section>
    </div>
</body>
</html>
